@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Plan to go somewhere today?</h1>
    <p>What it looks like the  <a href="https://openweathermap.org/current">Weather now</a>?</p>
</div>


<div id="checkWeather">
    <h3>Check Weather</h3>
    <form class="needs-validation" action="javascript:void(0);" onsubmit="queryWeather()">

        <div class="row">
            <div class="form-group">
                <label for="country">Country</label>
                <input id="country" class="form-control form-control-lg" type="text" placeholder="Country">

            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input id="city" class="form-control form-control-lg" type="text" placeholder="City">
            </div>
        </div>
        <div class="row">
            &nbsp;
        </div>
        <button type="submit" class="btn btn-primary mb-2">Check Weather</button>
    </form>
</div>
 
<div id="weatherResult"  class="alert alert-primary" role="alert">
    
</div>


<script src="js/site.js" asp-append-version="true"></script>